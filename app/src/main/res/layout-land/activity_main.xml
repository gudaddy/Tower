<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".ActivityMain">
    <!--android:background="@color/black"-->

    <!-- This frame is here for a border. If a border is no
    longer desired, remove this frame layout. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/black">
        <!--android:padding="20dp"-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/background_image"
            android:background="@drawable/wood_light_light"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:src="@drawable/icon_text_64"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:orientation="vertical"
            android:padding="10dp">

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/company_logo"-->
                <!--android:src="@drawable/proto32"-->
                <!--android:layout_gravity="left"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_name"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_version"
                android:text="@string/app_version"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/help_button"
            android:src="@drawable/help_32"
            android:padding="20dp"
            android:background="@android:color/transparent"
            android:layout_gravity="right|bottom" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settings_button"
            android:src="@drawable/gear_32"
            android:padding="20dp"
            android:background="@android:color/transparent"
            android:layout_gravity="right|top" />

        <LinearLayout
            android:id="@+id/touch_area"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcome_message"
                android:text="@string/instructions"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="50sp"
                android:gravity="center"
                android:padding="20dp" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>